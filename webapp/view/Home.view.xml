<View controllerName="root.controller.home" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:ext="root.controls" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>Calculator made by Dedeham}">
		<content>
			<VBox alignItems="Center">
				<Panel headerText="{i18n>CASIO CC 69 SX }" class="sapUiResponsiveMargin borderpanel">
					<VBox alignItems="Center">
						<HBox alignItems="Center">
							<Input placeholder="Start calculating!" width="270px" value="{inputModel>/expression/}">
							</Input>
						</HBox>
						<HBox>
							<VBox class="sapUiTinyMargin">
								<HBox alignItems="Center">
									<VBox>
										<Button text="7" press="editInput(7)">
										</Button>
									</VBox>
									<VBox>
										<Button text="8" press="editInput(8)">
										</Button>
									</VBox>
									<VBox>
										<Button text="9" press="editInput(9)">
										</Button>
									</VBox>
								</HBox>
								<HBox>
									<VBox>
										<Button text="4" press="editInput(4)">
										</Button>
									</VBox>
									<VBox>
										<Button text="5" press="editInput(5)">
										</Button>
									</VBox>
									<VBox>
										<Button text="6" press="editInput(6)">
										</Button>
									</VBox>
								</HBox>
								<HBox>
									<VBox>
										<Button text="1" press="editInput(1)">
										</Button>
									</VBox>
									<VBox>
										<Button text="2" press="editInput(2)">
										</Button>
									</VBox>
									<VBox>
										<Button text="3" press="editInput(3)">
										</Button>
									</VBox>
								</HBox>
								<HBox>
									<VBox>
										<Button text="." press="editInput('.')">
										</Button>
									</VBox>
									<VBox>
										<Button text="0" press="editInput(0)">
										</Button>
									</VBox>
									<VBox>
										<Button text="00" press="editInput(00)">
										</Button>
									</VBox>
								</HBox>
							</VBox>
							<VBox class="sapUiTinyMargin">
								<HBox>
									<VBox>
										<Button text="X" press="editInput('*')">
										</Button>
									</VBox>
									<VBox>
										<Button width="62px" text="/" press="editInput('/')">
										</Button>
									</VBox>
								</HBox>
								<HBox>
									<VBox>
										<Button text="√" press="editInput('√(')">
										</Button>
									</VBox>
									<VBox>
										<Button width="62px" text="x^y" press="editInput('^')">
										</Button>
									</VBox>
								</HBox>
								<HBox>
									<VBox>
										<Button text="-" press="editInput('-')">
										</Button>
									</VBox>
									<VBox>
										<Button text="sin()" width="62px" press="editInput('sin(')">
										</Button>
									</VBox>
								</HBox>
								<HBox>
									<VBox>
										<Button text="+" press="editInput('+')">
										</Button>
									</VBox>
									<VBox>
										<Button text="cos()" press="editInput('cos(')">
										</Button>
									</VBox>
								</HBox>
							</VBox>
						</HBox>
						<HBox>
							<VBox class="sapUiTinyMargin">
								<HBox>
									<VBox>
										<Button text="=" width="92px" press="validCompute">
										</Button>
									</VBox>
									<VBox>
										<Button text="(" press="editInput('(')">
										</Button>
									</VBox>
								</HBox>
								<VBox>
									<Button text="AC" press="clearInput" width="138px">
									</Button>
								</VBox>
							</VBox>
							<VBox class="sapUiTinyMargin">
								<HBox>
									<VBox>
										<Button text=")" press="editInput(')')">
										</Button>
									</VBox>
									<VBox>
										<Button text="tan()" width="62px" press="editInput('tan(')">
										</Button>
									</VBox>
								</HBox>
								<VBox>
									<Button text="DEL" press="removeChar" width="108px">
									</Button>
								</VBox>
							</VBox>
						</HBox>
					</VBox>
				</Panel>
			</VBox>
		</content>
	</Page>
</View>
